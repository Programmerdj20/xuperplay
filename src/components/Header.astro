---
import { Menu, X } from 'lucide-astro';
import { Image } from 'astro:assets';
import logoImage from '../assets/images/logos/Xuper_play_logo.webp';

const navItems = [
  { name: 'Inicio', href: '#inicio' },
  { name: 'Características', href: '#caracteristicas' },
  { name: 'Instalación', href: '#instalacion' },
  { name: 'FAQs', href: '#faqs' },
  { name: 'Contacto', href: '#contacto' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-gray-900/95 backdrop-blur-sm shadow-sm">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="#inicio" class="flex items-center">
        <Image src={logoImage} alt="XuperPlay" class="h-10 w-auto" loading="eager" />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-300 hover:text-primary-500 transition-colors duration-300 font-medium"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Button Desktop -->
      <a
        href="/downloads/xplay.apk"
        download
        class="hidden md:inline-block px-6 py-2.5 gradient-primary text-white rounded-lg font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        Descargar
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 text-gray-300 hover:text-primary-500 transition-colors"
        aria-label="Abrir menú"
      >
        <Menu size={24} />
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-gray-900 border-t border-gray-800"
  >
    <ul class="container mx-auto px-4 py-4 space-y-3">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block py-2 text-gray-300 hover:text-primary-500 transition-colors font-medium mobile-menu-link"
          >
            {item.name}
          </a>
        </li>
      ))}
      <li class="pt-2">
        <a
          href="/downloads/xplay.apk"
          download
          class="block w-full text-center px-6 py-2.5 gradient-primary text-white rounded-lg font-semibold mobile-menu-link"
        >
          Descargar
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking on a link
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');
  mobileMenuLinks.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // Close mobile menu on scroll
  let lastScroll = 0;
  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;
    if (currentScroll > lastScroll) {
      mobileMenu?.classList.add('hidden');
    }
    lastScroll = currentScroll;
  });
</script>
