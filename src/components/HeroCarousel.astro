---
import { ChevronLeft, ChevronRight, Play, Tv } from 'lucide-astro';

const slides = [
  {
    title: 'Entretenimiento Sin Límites',
    subtitle: 'Miles de canales y contenido on-demand al alcance de tu mano',
    cta: 'Comenzar Ahora',
    ctaLink: '#descargar',
    image: 'slide-1',
  },
  {
    title: 'Calidad Premium en Todos tus Dispositivos',
    subtitle: 'Disfruta de streaming en HD y 4K donde quieras, cuando quieras',
    cta: 'Ver Características',
    ctaLink: '#caracteristicas',
    image: 'slide-2',
  },
  {
    title: 'Fácil de Instalar y Usar',
    subtitle: 'Configura tu aplicación en minutos y comienza a disfrutar',
    cta: 'Guía de Instalación',
    ctaLink: '#instalacion',
    image: 'slide-3',
  },
];
---

<section id="inicio" class="relative h-screen w-full overflow-hidden bg-gray-900">
  <!-- Carousel Container -->
  <div id="carousel" class="relative h-full w-full">
    {slides.map((slide, index) => (
      <div
        class={`carousel-slide absolute inset-0 transition-opacity duration-700 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
        data-slide={index}
      >
        {/* Background with gradient overlay */}
        <div class="absolute inset-0 gradient-primary opacity-90" />

        {/* Content */}
        <div class="relative h-full flex items-center justify-center">
          <div class="container mx-auto px-4 text-center text-white">
            <div class="max-w-4xl mx-auto space-y-8">
              {/* Icon */}
              <div class="flex justify-center mb-6">
                {index === 0 && <Tv size={64} class="animate-pulse" />}
                {index === 1 && <Play size={64} class="animate-pulse" />}
                {index === 2 && <Tv size={64} class="animate-pulse" />}
              </div>

              {/* Title */}
              <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold leading-tight">
                {slide.title}
              </h1>

              {/* Subtitle */}
              <p class="text-lg md:text-xl lg:text-2xl text-white/90 max-w-3xl mx-auto">
                {slide.subtitle}
              </p>

              {/* CTA Button */}
              <div class="pt-4">
                <a
                  href={slide.ctaLink}
                  class="inline-block px-8 py-4 bg-white text-primary-600 rounded-lg font-bold text-lg hover:bg-gray-100 hover:scale-105 transition-all duration-300 shadow-xl"
                >
                  {slide.cta}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>

  <!-- Navigation Arrows -->
  <button
    id="prev-slide"
    class="absolute left-4 md:left-8 top-1/2 -translate-y-1/2 z-20 p-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full transition-all duration-300 group"
    aria-label="Slide anterior"
  >
    <ChevronLeft size={32} class="text-white group-hover:scale-110 transition-transform" />
  </button>

  <button
    id="next-slide"
    class="absolute right-4 md:right-8 top-1/2 -translate-y-1/2 z-20 p-3 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full transition-all duration-300 group"
    aria-label="Siguiente slide"
  >
    <ChevronRight size={32} class="text-white group-hover:scale-110 transition-transform" />
  </button>

  <!-- Indicators -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 flex gap-3">
    {slides.map((_, index) => (
      <button
        class={`indicator w-3 h-3 rounded-full transition-all duration-300 ${index === 0 ? 'bg-white w-8' : 'bg-white/50 hover:bg-white/75'}`}
        data-slide-to={index}
        aria-label={`Ir a slide ${index + 1}`}
      />
    ))}
  </div>
</section>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.carousel-slide');
  const indicators = document.querySelectorAll('.indicator');
  const totalSlides = slides.length;

  function showSlide(index: number) {
    // Hide all slides
    slides.forEach((slide) => {
      slide.classList.remove('opacity-100', 'z-10');
      slide.classList.add('opacity-0', 'z-0');
    });

    // Update indicators
    indicators.forEach((indicator) => {
      indicator.classList.remove('bg-white', 'w-8');
      indicator.classList.add('bg-white/50');
    });

    // Show current slide
    slides[index].classList.remove('opacity-0', 'z-0');
    slides[index].classList.add('opacity-100', 'z-10');

    // Update current indicator
    indicators[index].classList.remove('bg-white/50');
    indicators[index].classList.add('bg-white', 'w-8');

    currentSlide = index;
  }

  function nextSlide() {
    const next = (currentSlide + 1) % totalSlides;
    showSlide(next);
  }

  function prevSlide() {
    const prev = (currentSlide - 1 + totalSlides) % totalSlides;
    showSlide(prev);
  }

  // Event listeners
  document.getElementById('next-slide')?.addEventListener('click', nextSlide);
  document.getElementById('prev-slide')?.addEventListener('click', prevSlide);

  // Indicator click events
  indicators.forEach((indicator, index) => {
    indicator.addEventListener('click', () => showSlide(index));
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') prevSlide();
    if (e.key === 'ArrowRight') nextSlide();
  });

  // Auto-play (optional - uncomment to enable)
  // setInterval(nextSlide, 5000);
</script>
