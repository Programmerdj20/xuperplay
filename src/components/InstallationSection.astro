---
import Tv from './icons/Tv.astro';
import Smartphone from './icons/Smartphone.astro';
import Download from './icons/Download.astro';
import CheckCircle from './icons/CheckCircle.astro';

const installMethods = [
  {
    icon: Tv,
    title: 'Smart TV',
    steps: [
      'Abre la tienda de aplicaciones de tu Smart TV',
      'Busca "XuperPlay" en el buscador',
      'Descarga e instala la aplicación',
      'Abre la app e ingresa tu código de activación',
      'Disfruta del mejor contenido en tu TV',
    ],
  },
  {
    icon: Smartphone,
    title: 'Android/iOS',
    steps: [
      'Visita Google Play Store o App Store',
      'Busca "XuperPlay" y descarga',
      'Instala la aplicación en tu dispositivo',
      'Crea tu cuenta o inicia sesión',
      'Comienza a ver tus canales favoritos',
    ],
  },
  {
    icon: Download,
    title: 'Android APK',
    steps: [
      'Descarga el archivo APK desde nuestro sitio oficial',
      'Habilita "Fuentes desconocidas" en tu dispositivo',
      'Abre el archivo APK descargado',
      'Sigue las instrucciones de instalación',
      'Abre la app e inicia sesión',
    ],
  },
  {
    icon: Tv,
    title: 'Firestick/Fire TV',
    steps: [
      'Ve a Configuración > Mi Fire TV > Opciones de desarrollador',
      'Activa "Apps de fuentes desconocidas"',
      'Instala la app "Downloader" desde la tienda',
      'Ingresa la URL de descarga de XuperPlay',
      'Instala y disfruta',
    ],
  },
];
---

<section id="instalacion" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Instalación <span class="gradient-primary bg-clip-text text-transparent">Rápida y Fácil</span>
      </h2>
      <p class="text-lg md:text-xl text-gray-600">
        Sigue estos sencillos pasos para instalar XuperPlay en tu dispositivo favorito
      </p>
    </div>

    <!-- Installation Methods Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {installMethods.map((method, index) => {
        const Icon = method.icon;
        return (
          <div class="install-card bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 border border-gray-200 hover:border-primary-500 transition-all duration-300">
            {/* Header */}
            <div class="flex items-center gap-4 mb-6">
              <div class="p-3 gradient-primary rounded-lg">
                <Icon size={28} class="text-white" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900">
                {method.title}
              </h3>
            </div>

            {/* Steps */}
            <div class="space-y-4">
              {method.steps.map((step, stepIndex) => (
                <div class="flex items-start gap-3 group">
                  <div class="flex-shrink-0 mt-1">
                    <div class="w-6 h-6 rounded-full bg-primary-500 text-white flex items-center justify-center text-sm font-bold group-hover:scale-110 transition-transform">
                      {stepIndex + 1}
                    </div>
                  </div>
                  <p class="text-gray-700 leading-relaxed">
                    {step}
                  </p>
                </div>
              ))}
            </div>

            {/* CTA Button */}
            <div class="mt-6 pt-6 border-t border-gray-300">
              <button
                class="w-full py-3 px-6 bg-white hover:bg-primary-500 hover:text-white text-primary-600 font-semibold rounded-lg border-2 border-primary-500 transition-all duration-300"
              >
                Descargar para {method.title}
              </button>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Help Section -->
    <div class="mt-16 text-center bg-gradient-to-r from-primary-50 to-secondary-50 rounded-xl p-8 max-w-4xl mx-auto">
      <div class="flex items-center justify-center mb-4">
        <CheckCircle size={48} class="text-primary-600" />
      </div>
      <h3 class="text-2xl font-bold text-gray-900 mb-3">
        ¿Necesitas Ayuda con la Instalación?
      </h3>
      <p class="text-gray-700 mb-6">
        Nuestro equipo de soporte está disponible 24/7 para ayudarte con cualquier duda
      </p>
      <a
        href="#contacto"
        class="inline-block px-8 py-3 gradient-primary text-white rounded-lg font-semibold hover:shadow-lg hover:scale-105 transition-all duration-300"
      >
        Contactar Soporte
      </a>
    </div>
  </div>
</section>
