---
import {
  Tv,
  Smartphone,
  Shield,
  Globe,
  Star,
  Wifi,
} from 'lucide-astro';

const features = [
  {
    icon: Tv,
    title: 'Miles de Canales',
    description:
      'Accede a una amplia variedad de canales en vivo de todo el mundo, deportes, películas, series y más.',
  },
  {
    icon: Smartphone,
    title: 'Multi-Dispositivo',
    description:
      'Compatible con Smart TV, Android, iOS, tablets y más. Lleva tu entretenimiento a todos tus dispositivos.',
  },
  {
    icon: Shield,
    title: 'Seguro y Confiable',
    description:
      'Protección avanzada de datos y conexión segura para tu tranquilidad mientras disfrutas.',
  },
  {
    icon: Globe,
    title: 'Contenido Internacional',
    description:
      'Canales y contenido de múltiples países en diferentes idiomas. Entretenimiento global.',
  },
  {
    icon: Star,
    title: 'Calidad Premium',
    description:
      'Streaming en HD, Full HD y 4K. Disfruta de la mejor calidad de imagen y sonido.',
  },
  {
    icon: Wifi,
    title: 'Bajo Consumo de Datos',
    description:
      'Optimizado para consumir menos datos sin sacrificar calidad. Perfecto para conexiones móviles.',
  },
];
---

<section id="caracteristicas" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900">
        Características
      </h2>
    </div>

    <!-- Features Grid -->
    <div class="grid grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature) => {
        const Icon = feature.icon;
        return (
          <div class="group bg-white rounded-xl p-4 lg:p-8 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-2 border border-gray-100">
            {/* Icon */}
            <div class="mb-3 lg:mb-6 inline-flex p-3 lg:p-4 rounded-lg gradient-primary">
              <Icon size={24} class="text-white lg:w-8 lg:h-8" />
            </div>

            {/* Title */}
            <h3 class="text-sm lg:text-xl font-bold text-gray-900 lg:mb-3">
              {feature.title}
            </h3>

            {/* Description - Solo visible en desktop */}
            <p class="hidden lg:block text-gray-600 leading-relaxed">
              {feature.description}
            </p>
          </div>
        );
      })}
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-16">
      <button
        id="openTrialModal"
        class="inline-block px-8 py-4 gradient-primary text-white rounded-lg font-bold text-lg hover:shadow-xl hover:scale-105 transition-all duration-300 cursor-pointer"
      >
        Probar 7 Dias Gratis
      </button>
    </div>
  </div>
</section>
