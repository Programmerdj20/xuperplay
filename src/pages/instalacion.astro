---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import {
  Download,
  Tv,
  Smartphone,
  Monitor,
  CheckCircle,
  XCircle,
} from 'lucide-astro';

// Importar imágenes de dispositivos
import androidTvBox from '../assets/images/Dispositivos/Android-TV-Box-1.png';
import televisorAndroidTv from '../assets/images/Dispositivos/Televisor-Android-TV_.webp';
import firetvStick from '../assets/images/Dispositivos/Amazon-Fire-TV-Stick.webp';
import xiaomiTvStick from '../assets/images/Dispositivos/Xiaomi-TV-Stick.webp';
import celularAndroid from '../assets/images/Dispositivos/Celular-Android.webp';
import tabletaAndroid from '../assets/images/Dispositivos/Tableta-Android.webp';
import chromecast from '../assets/images/Dispositivos/Google-Chromecast-.png';
import pcEmulador from '../assets/images/Dispositivos/PC-con-emulador.png';

const compatibleDevices = [
  {
    name: 'Android TV Box',
    icon: Tv,
    image: androidTvBox,
    compatible: true,
  },
  {
    name: 'Televisor Android TV',
    icon: Tv,
    image: televisorAndroidTv,
    compatible: true,
  },
  {
    name: 'Amazon Fire TV Stick',
    icon: Tv,
    image: firetvStick,
    compatible: true,
  },
  {
    name: 'Xiaomi Mi TV Stick',
    icon: Tv,
    image: xiaomiTvStick,
    compatible: true,
  },
  {
    name: 'Celular Android',
    icon: Smartphone,
    image: celularAndroid,
    compatible: true,
  },
  {
    name: 'Tableta Android',
    icon: Smartphone,
    image: tabletaAndroid,
    compatible: true,
  },
  {
    name: 'Google Chromecast 4',
    icon: Tv,
    image: chromecast,
    compatible: true,
  },
  {
    name: 'PC (con emulador)',
    icon: Monitor,
    image: pcEmulador,
    compatible: true,
  },
];

const incompatibleDevices = [
  'Lamentablemente nuestro sitema no trabaja bien en dispositivos Roku, por lo cual no damos soporte alguno para estos dispositivos.',
];

// Importar imágenes para tarjetas de instalación
import smartTvImg from '../assets/images/Dispositivos/Diseño sin título(5).png';
import fireTvImg from '../assets/images/Dispositivos/Diseño sin título(7).webp';
import celularImg from '../assets/images/Dispositivos/Diseño sin título(4).png';
import pcImg from '../assets/images/Dispositivos/Diseño sin título(6).png';

const installationGuides = [
  {
    title: 'Smart TV / TV Box',
    subtitle: 'SMART TV O TV BOX',
    icon: Tv,
    image: smartTvImg,
    downloadLink: '/downloads/xplay.apk',
  },
  {
    title: 'Fire TV Stick',
    subtitle: 'FIRE TV STICK',
    icon: Tv,
    image: fireTvImg,
    downloadLink: '/downloads/xplay.apk',
  },
  {
    title: 'Celular',
    subtitle: 'CELULAR',
    icon: Smartphone,
    image: celularImg,
    downloadLink: '/downloads/xplay.apk',
  },
  {
    title: 'PC',
    subtitle: 'PC',
    icon: Monitor,
    image: pcImg,
    downloadLink: '/downloads/xplay.apk',
  },
];
---

<MainLayout>
  <Header />

  <main class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <!-- Hero Section -->
    <section
      class="pt-32 pb-16 bg-gradient-to-r from-primary-600 to-secondary-600"
    >
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
          Guía de Instalación
        </h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto">
          Instala XuperPlay en tus dispositivos compatibles y comienza a
          disfrutar del mejor contenido
        </p>
      </div>
    </section>

    <!-- Compatible Devices Section -->
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Dispositivos Compatibles
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Nuestro sistema es compatible con una amplia gama de dispositivos.
            Sin embargo, nuestra App principal es exclusivo para sistemas
            Android.
          </p>
        </div>

        <!-- Lista de Dispositivos Compatibles -->
        <div class="max-w-6xl mx-auto mb-12">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            {
              compatibleDevices.map((device) => (
                <div class="flex items-center gap-4 bg-white p-4 rounded-xl border-2 border-gray-200 hover:border-primary-500 transition-all duration-300 hover:shadow-lg group">
                  <div class="shrink-0">
                    <Image
                      src={device.image}
                      alt={device.name}
                      class="w-16 h-16 object-contain group-hover:scale-110 transition-transform duration-300"
                      width={64}
                      height={64}
                    />
                  </div>
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-primary-600 transition-colors">
                      {device.name}
                    </h3>
                  </div>
                  <div class="shrink-0">
                    <CheckCircle size={24} class="text-green-600" />
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Incompatible Devices -->
        <div
          class="max-w-4xl mx-auto bg-red-50 border-2 border-red-200 rounded-xl p-6"
        >
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0">
              <XCircle size={24} class="text-red-600" />
            </div>
            <div>
              <h3 class="text-lg font-bold text-red-900 mb-2">
                NO compatible con:
              </h3>
              <p class="text-red-800">
                {incompatibleDevices.join(', ')}
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Installation Guide Section -->
    <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Guía de Instalación
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Elige tu dispositivo y sigue las instrucciones
          </p>
        </div>

        <!-- Installation Cards Grid -->
        <div
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto"
        >
          {
            installationGuides.map((guide) => (
              <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 border-2 border-gray-100 hover:border-primary-500 flex flex-col">
                {/* Card Image */}
                <div class="bg-white p-8 flex items-center justify-center lg:h-64">
                  <Image
                    src={guide.image}
                    alt={guide.title}
                    class="w-full h-full object-contain"
                    loading="lazy"
                  />
                </div>

                {/* Card Body */}
                <div class="p-6 text-center flex flex-col flex-1">
                  <h3 class="text-2xl font-bold text-gray-900 mb-2 lg:h-16 flex items-center justify-center">
                    {guide.title}
                  </h3>
                  <p class="text-sm text-gray-600 uppercase tracking-wider font-semibold mb-6">
                    {guide.subtitle}
                  </p>

                  {/* Download Button */}
                  <a
                    href={guide.downloadLink}
                    download
                    class="flex items-center justify-center gap-2 w-full py-3 px-6 bg-gradient-to-r from-primary-500 to-secondary-500 text-white font-semibold rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 mt-auto"
                  >
                    <Download size={20} />
                    <span>Descargar</span>
                  </a>
                </div>
              </div>
            ))
          }
        </div>

        {/* Help Section */}
        <div class="mt-16 max-w-4xl mx-auto">
          <div
            class="bg-gradient-to-r from-primary-50 to-secondary-50 rounded-2xl p-8 md:p-12 text-center border-2 border-primary-100"
          >
            <div class="inline-flex p-4 bg-white rounded-full mb-6">
              <CheckCircle size={48} class="text-primary-600" />
            </div>
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
              ¿Necesitas Ayuda con la Instalación?
            </h3>
            <p class="text-lg text-gray-700 mb-6 max-w-2xl mx-auto">
              Nuestro equipo de soporte está disponible 24/7 para asistirte con
              cualquier duda o problema durante la instalación
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a
                href="https://wa.me/573102800482"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-gradient-to-r from-primary-500 to-secondary-500 text-white rounded-lg font-semibold hover:shadow-xl hover:scale-105 transition-all duration-300"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                  ></path>
                </svg>
                <span>Contactar por WhatsApp</span>
              </a>
              <a
                href="#faq"
                class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white border-2 border-primary-500 text-primary-600 rounded-lg font-semibold hover:bg-primary-50 transition-all duration-300"
              >
                <span>Ver Preguntas Frecuentes</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</MainLayout>
